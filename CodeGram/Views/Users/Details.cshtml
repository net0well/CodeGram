@model GetUserProfileVM

<main id="site__main" class="2xl:ml-[--w-side]  xl:ml-[--w-side-sm] p-2.5 h-[calc(100vh-var(--m-top))] mt-[--m-top]">

    <div class="max-w-[1065px] mx-auto max-lg:-m-2.5">
        <div class="bg-white shadow-lg lg:rounded-xl lg:-mt-10 transition-all duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="relative overflow-hidden w-full lg:h-8 h-8"></div>
            <div class="p-6 flex flex-row items-center space-x-6">
                <div class="flex-shrink-0">
                    <div class="relative lg:h-36 lg:w-48 w-36 h-28 rounded-xl border-4 border-gray-200 shadow-md overflow-hidden transition-transform duration-300 transform hover:scale-110">
                        <img src="@(string.IsNullOrEmpty(Model.User.ProfilePictureUrl) ? Url.Content("~/images/avatar/user.png") : Url.Content("~/"+Model.User.ProfilePictureUrl))" class="object-cover w-full h-full" />
                    </div>
                </div>
                <div>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-800 relative overflow-hidden">
                        <span class="transition-all duration-300 hover:text-blue-600 hover:tracking-widest">
                            <span class="absolute inset-0 bg-gradient-to-r from-yellow-400 to-red-500 opacity-30 blur-xl animate-pulse"></span>
                            @Model.User.FullName
                        </span>
                    </h3>
                    <p class="mt-2 text-gray-600 text-sm md:text-base">@Model.User.UserName</p>

                    <div class="mt-4 text-gray-700 text-sm md:text-base max-w-full">
                        <strong class="block mb-2">Bio</strong>
                        <p class="text-justify break-words leading-relaxed overflow-hidden text-ellipsis max-h-40">
                            @Model.User.Bio
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex 2xl:gap-12 gap-10 mt-8 max-lg:flex-col" id="js-oversized">
            <div class="flex-1 xl:space-y-6 space-y-3">
                @foreach (var post in Model.Posts)
                {
                    <partial name="Home/_Post" model="post"
                             view-data='new ViewDataDictionary(ViewData)
                            {
                                { "ShowAllComment", false },
                                {"ShowDetails", false }
                            }' />
                }
            </div>
            <div class="lg:w-[400px]">
                <div class="lg:space-y-4 lg:pb-8 max-lg:grid sm:grid-cols-2 max-lg:gap-6"
                     uk-sticky="media: 1024; end: #js-oversized; offset: 80">
                    <div class="box p-5 px-6">
                        <div class="flex items-ce justify-between text-black">

                            <h3 class="font-bold text-lg">
                                Friends
                                <span class="block text-sm text-gray-500 mt-0. font-normal"> 20 friends </span>
                            </h3>

                        </div>

                        <div class="grid grid-cols-3 gap-2 gap-y-5 text-center text-sm mt-4 mb-2">
                            <div>
                                <div class="relative w-full aspect-square rounded-lg overflow-hidden">
                                    <img src="~/images/avatar/user.png" class="object-cover w-full h-full inset-0" />
                                </div>

                                <div class="mt-2 line-clamp-1">Wellington Neto</div>
                            </div>

                            <div>
                                <div class="relative w-full aspect-square rounded-lg overflow-hidden">
                                    <img src="~/images/avatar/user.png" class="object-cover w-full h-full inset-0" />
                                </div>

                                <div class="mt-2 line-clamp-1">Wellington Neto</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>