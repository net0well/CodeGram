<script>
    document.addEventListener('DOMContentLoaded', function () {
       
        highlightActiveMenu();

        
        setupPageTransitions();

        
        function highlightActiveMenu() {
            const currentPath = window.location.pathname.toLowerCase();
            const menuItems = document.querySelectorAll('.menu-item');

            menuItems.forEach(item => {
                
                item.classList.remove('bg-blue-600/20', 'bg-pink-600/20', 'bg-yellow-600/20', 'bg-teal-600/20', 'bg-purple-600/20');

                
                const page = item.getAttribute('data-page');
                if (currentPath.includes(page) ||
                    (page === 'home' && (currentPath === '/' || currentPath.endsWith('/home')))) {

                    
                    switch (page) {
                        case 'home':
                            item.classList.add('bg-blue-600/20');
                            item.querySelector('span').classList.add('text-blue-600');
                            break;
                        case 'favorites':
                            item.classList.add('bg-pink-600/20');
                            item.querySelector('span').classList.add('text-pink-600');
                            break;
                        case 'friends':
                            item.classList.add('bg-yellow-600/20');
                            item.querySelector('span').classList.add('text-yellow-600');
                            break;
                        case 'settings':
                            item.classList.add('bg-teal-600/20');
                            item.querySelector('span').classList.add('text-teal-600');
                            break;
                        case 'collectibles':
                            item.classList.add('bg-purple-600/20');
                            item.querySelector('span').classList.add('text-purple-600');
                            break;
                        default:
                            item.classList.add('bg-blue-600/20');
                    }

                    
                    item.classList.add('border-l-4');
                    switch (page) {
                        case 'home':
                            item.classList.add('border-blue-600');
                            break;
                        case 'favorites':
                            item.classList.add('border-pink-600');
                            break;
                        case 'friends':
                            item.classList.add('border-yellow-600');
                            break;
                        case 'settings':
                            item.classList.add('border-teal-600');
                            break;
                        case 'collectibles':
                            item.classList.add('border-purple-600');
                            break;
                        default:
                            item.classList.add('border-blue-600');
                    }
                }
            });
        }

        
        function setupPageTransitions() {
            const menuLinks = document.querySelectorAll('.menu-item');

            menuLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                   
                    if (this.getAttribute('href') &&
                        !this.getAttribute('href').startsWith('#') &&
                        !this.getAttribute('href').startsWith('http')) {

                        e.preventDefault();
                        const targetPage = this.getAttribute('href');

                        
                        const mainContent = document.querySelector('main') || document.querySelector('#content') || document.querySelector('#main-content');

                        if (mainContent) {
                            
                            mainContent.classList.add('opacity-0', 'transition-opacity', 'duration-300');

                            
                            setTimeout(() => {
                                window.location.href = targetPage;
                            }, 300); 
                        } else {
                            
                            window.location.href = targetPage;
                        }
                    }
                });
            });
        }
    });
</script>


