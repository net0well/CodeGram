<script>
    document.addEventListener('DOMContentLoaded', function () {
        highlightActiveMenu();
        setupPageTransitions();
        initStatusUpdates();

        function highlightActiveMenu() {
            const currentPath = window.location.pathname.toLowerCase();
            const menuItems = document.querySelectorAll('.menu-item');

            menuItems.forEach(item => {
                // Remove all active states
                item.classList.remove('active');

                // Check if this item should be active
                const page = item.getAttribute('data-page');
                if (currentPath.includes(page) ||
                    (page === 'home' && (currentPath === '/' || currentPath.endsWith('/home')))) {

                    // Add active state
                    item.classList.add('active');
                }
            });
        }

        function setupPageTransitions() {
            const menuLinks = document.querySelectorAll('.menu-item');

            menuLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    if (this.getAttribute('href') &&
                        !this.getAttribute('href').startsWith('#') &&
                        !this.getAttribute('href').startsWith('http')) {

                        e.preventDefault();
                        const targetPage = this.getAttribute('href');

                        // Add loading state
                        this.style.pointerEvents = 'none';
                        const icon = this.querySelector('.icon-container');
                        if (icon) {
                            icon.style.transform = 'scale(0.95)';
                            icon.style.opacity = '0.7';
                        }

                        const mainContent = document.querySelector('main') || document.querySelector('#content') || document.querySelector('#main-content');

                        if (mainContent) {
                            mainContent.style.transition = 'opacity 0.3s ease';
                            mainContent.style.opacity = '0';

                            setTimeout(() => {
                                window.location.href = targetPage;
                            }, 300);
                        } else {
                            setTimeout(() => {
                                window.location.href = targetPage;
                            }, 150);
                        }
                    }
                });
            });
        }

        function initStatusUpdates() {
            // Event banner interactions only
            const eventBanner = document.querySelector('[href="#"]');
            if (eventBanner && eventBanner.textContent.includes('Join Event')) {
                eventBanner.addEventListener('click', function (e) {
                    e.preventDefault();
                    // Add some visual feedback
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 150);
                });
            }
        }
    });
</script>

