@model List<Notification>

@foreach(var notification in @Model)
{
    TimeSpan time = DateTime.Now.Subtract(notification.DateCreated);
    string displayTxt = time switch
    {
        var t when t.TotalDays >= 1 => $"{(int)t.TotalDays}d atras.",
        var t when t.TotalHours >= 1 => $"{(int)t.TotalDays}h atras.",
        var t when t.TotalMinutes >= 1 => $"{(int)t.TotalDays}m atras.",
        _ => "Agora"
    };

    <div class="relative flex items-center gap-3 p-2 duration-200 rounded-xl pr-10 hover:bg-secondery">
        <div class="flex-1">
            <p>
                <b class="font-bold mr1">@notification.Message</b>
            </p>
            <div class="text-xs text-gray-500 mt-1.5">
                @displayTxt
            </div>
        </div>
    </div>
}